        <TextBox x:Name="productRemark" HorizontalAlignment="Left" Height="24" Margin="85,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label_Copy5" Content="商品編號:" HorizontalAlignment="Left" Margin="25,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.838,0.9"/>
        <TextBox x:Name="productID" HorizontalAlignment="Left" Height="24" Margin="85,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
